<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WhiteSpinnerText" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="WhiteSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:popupTheme">@style/SpinnerPopupTheme</item>
        <item name="colorControlNormal">@color/white</item> <!-- Flecha blanca -->
    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

</resources>