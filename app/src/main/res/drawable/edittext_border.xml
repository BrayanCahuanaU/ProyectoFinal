<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra interna -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#08000000"
                android:centerColor="#20000000"
                android:endColor="#08000000"
                android:centerX="0.5"
                android:centerY="0.5" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
    <!-- Fondo principal con borde naranja -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/lightblack" />

        </shape>
    </item>
</layer-list>
