<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra interna con gradiente lineal -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#08000000"
                android:centerColor="#20000000"
                android:endColor="#08000000"
                android:centerX="0.5"
                android:centerY="0.5" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>

    <!-- Fondo principal -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/white" />
            <stroke
                android:width="0dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
</layer-list>