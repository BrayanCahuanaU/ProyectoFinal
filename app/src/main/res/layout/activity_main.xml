<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Botones en la misma fila -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <!-- Botón de Mi Cuenta (izquierda) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/cuenta"
            app:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"/>

        <!-- Botón de Mi Cuenta (centro) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/chat" />

        <!-- Botón de Nuevo Post (derecha) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnNewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:paddingVertical="5dp"
            app:srcCompat="@drawable/agregar"
            app:backgroundTint="@color/white"/>
    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar posts..."
        android:iconifiedByDefault="true"
        android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:weightSum="3"
        android:gravity="center_vertical">

        <!-- Filtro precio -->
        <Spinner
            android:id="@+id/spPriceRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/price_ranges" />

        <!-- Filtro rating -->
        <Spinner
            android:id="@+id/spMinRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/min_ratings" />

        <!-- Orden -->
        <Spinner
            android:id="@+id/spSort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/sort_options" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPosts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_post" />


</LinearLayout>